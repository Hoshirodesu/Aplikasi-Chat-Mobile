<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="-23dp"
        android:src="@drawable/background"/>

    <ImageView
        android:id="@+id/login_image"
        android:layout_width="match_parent"
        android:layout_height="278dp"
        android:layout_below="@+id/background"
        android:src="@drawable/image" />

    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_image"
        android:text="Get Started"
        android:layout_centerHorizontal="true"
        android:textSize="25dp"
        android:textColor="@color/black"
        android:fontFamily="@font/calsansregular"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Phasellus tempor imperdiet feugiat. Curabitur nisl tellus, elementum ut mattis ut, tristique vel lacus."
        android:textColor="@color/black"
        android:fontFamily="@font/calsansregular"
        android:gravity="center"
        android:padding="20dp"
        android:layout_below="@+id/text1"/>

    <Button
        android:id="@+id/login_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text2"
        android:width="300dp"
        android:height="65dp"
        android:text="Login"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:fontFamily="@font/calsansregular"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button_shape"
        android:layout_marginTop="20dp"/>

    <Button
        android:id="@+id/register_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_button"
        android:width="300dp"
        android:height="65dp"
        android:text="Register"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:fontFamily="@font/calsansregular"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button_shape"
        android:layout_marginTop="20dp"/>

</RelativeLayout>